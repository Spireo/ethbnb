{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": "airbnb-base",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly",
        "hasKey": "readonly",
        "logger": "readonly",
        "isSet": "readonly",
        "sleep": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules" : {
        "semi": ["error", "never"],
        "no-console": 0,
        "quotes": [2, "single"],
        "strict": [2, "never"],
        "prefer-destructuring": 0,
        "no-restricted-syntax": ["error", "WithStatement", "BinaryExpression[operator='in']"],
        "object-curly-newline": "off"
    }
}